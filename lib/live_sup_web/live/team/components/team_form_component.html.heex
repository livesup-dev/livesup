<div>
  <.simple_form target={@myself} for={@form} as={:team}>
    <.text field={@form[:name]} required={true} label="Name" />
    <.textarea field={@form[:description]} required={false} label="Description" />

    <:actions>
      <.default_modal_actions action={@action} />
    </:actions>
  </.simple_form>
</div>
