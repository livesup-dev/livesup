<!-- Register link -->
<div class="text-sm text-gray-600 dark:text-gray-400">
  Don't have an account yet? 
  <%= link "Register", to: Routes.user_registration_path(LiveSupWeb.Endpoint, :new), method: :delete, class: "text-blue-600 hover:underline" %>
</div>
